
@model MiniProjectMVC.Models.ModelMy

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Layout.cshtml";
}
<link href="~/css/bootstrap.css" rel="stylesheet" />
<link href="~/css/bootstrap.min.css" rel="stylesheet" />
<script src="~/js/bootstrap.min.js"></script>
<link href="~/css/myCss.css" rel="stylesheet" />
<h2 style="text-align:center;" class="text-shadow">Registration</h2>
@using(Html.BeginForm("Index","Register",FormMethod.Post,null))
{
   
    
    //-------------------- Div For Form-Controls -----------------------------//
<div class="container-fluid ">
    <div class="row">
        <div class="col-md-12">
            <div class="col-md-3"></div>
            <div class="col-md-6">
    <div class="panel panel-success">
        <div class="panel-heading">Registration</div>
        <div class="panel-body box-shadow">
        <table class="table table-responsive">
            <tr>
                <td  >
                    @Html.RouteLink("If Already Have an Account Click Here", new { Action="Index",Controller="LogIn"})
                </td>
            </tr>
            <tr>
                <td  style="text-align:center">
                    <i class="glyphicon glyphicon-user"></i>
                    @Html.LabelFor(Model=>Model.Name)
                    &nbsp;
                    &nbsp;
                    @Html.TextBoxFor(Model => Model.Name, string.Empty, new { @class=" input-sm"})
                    @Html.ValidationMessageFor(Model=>Model.Name, string.Empty, new { @class="label label-danger"})
                </td>
            </tr>
            <tr>
                <td  style="text-align:center">
                    <i class="glyphicon glyphicon-envelope"></i>
                    @Html.LabelFor(Model=>Model.Email)
                    &nbsp;
                    &nbsp;
                    @Html.TextBoxFor(Model => Model.Email, string.Empty, new { @class=" input-sm"})
                    @Html.ValidationMessageFor(Model=>Model.Email, string.Empty, new { @class="label label-danger"})
                </td>
            </tr>
            <tr>
                <td  style="text-align:center">
                    <i class="glyphicon glyphicon-lock"></i>
                    @Html.LabelFor(Model=>Model.Password)
                    @Html.PasswordFor(Model => Model.Password, new { @class=" input-sm"})
                    @Html.ValidationMessageFor(Model => Model.Password, string.Empty, new { @class="label label-danger"})
                </td>
            </tr>
            <tr>
                <td  style="text-align:center;">
                    @Html.ValidationMessageFor(Model=>Model.Error, string.Empty, new { @class="label label-danger"})
                </td>
            </tr>
            <tr>
                <td  style="text-align: center">
                    <input type="submit" class="btn btn-success" value="Register" id="btnReg" name="btnReg" />
                </td>
            </tr>
        </table>
            </div>
             </div>
            </div>
        <div class="col-md-3"></div>
        </div>
        </div>
</div>
}