
@model MiniProjectMVC.Models.ModelMy
@{
    ViewBag.Title = "Index-logIn";
    Layout="~/Views/Layout.cshtml";
}
<link href="~/css/bootstrap.css" rel="stylesheet" />
<link href="~/css/bootstrap.min.css" rel="stylesheet" />
<script src="~/js/bootstrap.min.js"></script>
<link href="~/css/myCss.css" rel="stylesheet" />
<link href="~/css/myCss.css" rel="stylesheet" />

<script type="text/javascript">

    // options for first instance
    var options12 = {
        classNamePrefix: 'bvalidator_red_'
    };


    $(document).ready(function () {
        // note that order of these lines is important
        $('#form12').bValidator(options12); // first instance
    });

</script>
<h2 style="text-align:center" class="text-shadow">LogIn</h2>
@using(Html.BeginForm("Index","LogIn",FormMethod.Post,null))
{

    
    //------------- Div For Form-controls -----------------------------//
    <form id="form12" method="post">
    <div id="mainDiv" class="container-fluid ">
        <div class="row">
            <div class="col-md-12 ">
                <div class="col-md-4"></div>
                    <div class="col-md-4">
                      <div class="panel ">
                         <div class=" panel-primary " >
                            <div class="panel-heading">
                              LogIn
                            </div>
                         <div class="panel-body box-shadow">
        <table class="table table-responsive ">
            <tr >
                <td class="" style="text-align:center;">
                     <i class="glyphicon glyphicon-envelope ">
                        </i>&nbsp;
                    @Html.LabelFor(Model=>Model.Email)&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                    @Html.TextBoxFor(Model => Model.Email, string.Empty, new { @class = " input-sm",data_bvalidator="required" })
               
                    @Html.ValidationMessageFor(Model=>Model.Email, string.Empty, new { @class="label label-danger "})
                </td>
            </tr>
            <tr >
                <td class="" style="text-align:center;">
                    <i class="glyphicon glyphicon-lock"></i>
                    @Html.LabelFor(Model => Model.Password)
                    @Html.PasswordFor(Model => Model.Password,new { @class=" input-sm"})
                    @Html.ValidationMessageFor(Model=>Model.Password, string.Empty, new { @class="label label-danger"})
                </td>
            </tr>
            <tr >
                <td colspan="2" class=" " style="color:red">
                    @Html.ValidationMessageFor(Model=>Model.Error, string.Empty, new { @class="label label-danger"})
                </td>
            </tr>
            <tr>
                <td  style="text-align:center;" class="" colspan="2">
                    <input type="submit" class="btn btn-Primary  " style="" id="btnSubmit" name="btnSubmit" value="LogIn" />
                </td>
            </tr>
        </table>
              </div>
             </div>
            </div>
           </div>
         <div class="col-md-4">
         </div>
      </div>
    <br />
   </div>

       
 </div>
        </form>
}


    
    
    
    
    
    
    
 