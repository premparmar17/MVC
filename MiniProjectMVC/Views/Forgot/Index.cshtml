@model MiniProjectMVC.Models.ModelMy

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Layout.cshtml";
}
<link href="~/css/bootstrap.css" rel="stylesheet" />
<link href="~/css/bootstrap.min.css" rel="stylesheet" />
<script src="~/js/bootstrap.min.js"></script>
<link href="~/css/myCss.css" rel="stylesheet" />
<h2 style="text-align:center;" class="text-shadow">Forgot Password</h2>

@using (Html.BeginForm("Index", "Forgot", FormMethod.Post, null))
{
    
   
    
  ////-------------- Div For Form Controls --------------------------------------//  
<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="col-md-4"></div>
            <div class="col-md-4">
             <div class="panel panel-danger">
              <div class="panel-heading">
                 <h4>Forgot Password</h4>
                   </div>
        <div class="panel-body box-shadow">
<table class="table table-responsive">
  
    <tr>
        <td style="text-align:center" >
            <i class="glyphicon glyphicon-envelope"></i>
            @Html.LabelFor(Model=>Model.Email)
            @Html.TextBoxFor(Model => Model.Email, string.Empty, new { @class=" input-sm"})
            <br />
            @Html.ValidationMessageFor(Model => Model.Email,string.Empty, new { @class="label label-danger"})
        </td>
    </tr>
    <tr>
        <td style="text-align:center">
            @Html.ValidationMessageFor(Model=>Model.Error,string.Empty, new { @class="label label-success"})
        </td>
        </tr>
    <tr>
        <td  style="text-align:center">
            <input type="submit" id="btnGetPassword" name="btnGetPassword" value="Get Password" class="btn btn-primary"/>
         </td>

    </tr>
</table>
                    </div>
                  </div>
                </div>
               <div class="col-md-4"></div>
            </div>
        </div>
</div>
}